{
  "name": "bga-chrome-extension",
  "version": "1.0.0",
  "description": "Checks your games in progress on boardgamearena.com",
  "scripts": {
    "dev": "NODE_ENV=development webpack --watch",
    "build": "NODE_ENV=production yarn tailwind; webpack --env production",
    "tailwind": "tailwindcss-cli build ./src/css/base.css -c ./tailwind.config.js -o ./src/css/tailwind.css --no-autoprefixer"
  },
  "devDependencies": {
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "8.1.1",
    "html-loader": "2.1.2",
    "html-webpack-plugin": "5.3.1",
    "webpack": "5.36.2",
    "webpack-cli": "4.7.0",
    "webpack-dev-server": "3.11.2",
    "write-file-webpack-plugin": "4.5.1",
    "tailwindcss-cli": "0.1.2",
    "postcss": "8.2.14"
  }
}
