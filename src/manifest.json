{
  "manifest_version": 3,
  "name": "BGA Chrome Extension",
  "version": "1.6.6",
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "default_locale": "en",
  "description": "__MSG_ext_description__",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://boardgamearena.com/1/*",
        "https://boardgamearena.com/2/*",
        "https://boardgamearena.com/3/*",
        "https://boardgamearena.com/4/*",
        "https://boardgamearena.com/5/*",
        "https://boardgamearena.com/6/*",
        "https://boardgamearena.com/7/*",
        "https://boardgamearena.com/8/*",
        "https://boardgamearena.com/9/*",
        "https://boardgamearena.com/10/*",
        "https://boardgamearena.com/11/*",
        "https://boardgamearena.com/12/*",
        "https://boardgamearena.com/13/*",
        "https://boardgamearena.com/14/*",
        "https://boardgamearena.com/15/*",
        "https://boardgamearena.com/16/*",
        "https://boardgamearena.com/17/*",
        "https://boardgamearena.com/18/*",
        "https://boardgamearena.com/19/*",
        "https://boardgamearena.com/20/*",
        "https://boardgamearena.com/bug*"
      ],
      "run_at": "document_idle",
      "js": [
        "content.js"
      ]
    }
  ],
  "author": "Flavien Busseuil",
  "homepage_url": "https://github.com/FlavienBusseuil/bga-chrome-extension",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "https://*.boardgamearena.com/*/*"
  ],
  "permissions": [
    "alarms",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/anim-0.png",
        "img/anim-1.png",
        "img/anim-2.png",
        "img/anim-3.png",
        "img/anim-4.png",
        "img/anim-5.png",
        "img/anim-6.png",
        "img/loading.gif",
        "img/icon-48.png"
      ],
      "matches": []
    }
  ]
}